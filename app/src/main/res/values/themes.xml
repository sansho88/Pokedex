    <style name="Theme.Swifty_companion.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Swifty_companion.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
